            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/txt_title_tuesday"
            app:layout_constraintTop_toBottomOf="@+id/txt_title_tuesday" />

        <TextView
            android:id="@+id/txt_category_tuesday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
